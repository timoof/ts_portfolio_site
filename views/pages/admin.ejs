<section class="admin-hero">
    <h1>Admin Dashboard</h1>
    <a href="/admin/logout" class="btn logout-btn">Logout</a>
</section>

<div class="grid admin-grid">
    <!-- Music Upload -->
    <div class="admin-card glass">
        <h2>Upload Music</h2>
        <form action="/admin/upload/music" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label>Select Track (.mp3, .wav)</label>
                <input type="file" name="music" accept=".mp3, .wav" required>
            </div>
            <button type="submit" class="btn">Upload Track</button>
        </form>
    </div>

    <!-- Web Project Upload -->
    <div class="admin-card glass">
        <h2>Upload Web Project</h2>
        <form action="/admin/upload/project" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label>Project Name (Folder Name)</label>
                <input type="text" name="projectName" placeholder="e.g. portfolio-v1" required>
            </div>
            <div class="form-group">
                <label>Select Project Archive (.zip)</label>
                <input type="file" name="web-project" accept=".zip" required>
            </div>
            <button type="submit" class="btn">Upload & Deploy</button>
        </form>
    </div>
</div>

